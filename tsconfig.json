{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "incremental": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "verbatimModuleSyntax": true
  }
}
